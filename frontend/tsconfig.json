{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2019",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      // "es5",
      // "es2015",
      // "es2017",
      "es2019",
      "dom"
    ],
    "module": "es2020",
    "baseUrl": "./",
    "paths": {
      "core-js/es6/*": [
        "../node_modules/core-js/es/*"
      ] 
    }
  }
}
